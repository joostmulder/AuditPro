<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="10dp"
	tools:context="com.auditpro.mobile_client.pages.SettingsPage">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		tools:ignore="UselessParent">
		<com.auditpro.mobile_client.controls.CustomTextView
			style="@style/customText"
			android:text="@string/settings_autosync_wifi"
			android:layout_alignParentStart="true"
			android:layout_toStartOf="@id/autoSyncSwitch"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<Switch
			android:id="@+id/autoSyncSwitch"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_marginStart="15dp"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	</RelativeLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		tools:ignore="UselessParent">
		<com.auditpro.mobile_client.controls.CustomTextView
			style="@style/customText"
			android:text="@string/settings_auto_decimal"
			android:layout_alignParentStart="true"
			android:layout_toStartOf="@id/autoDecimalSwitch"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<Switch
			android:id="@+id/autoDecimalSwitch"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"
			android:layout_marginStart="15dp"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	</RelativeLayout>

</LinearLayout>
