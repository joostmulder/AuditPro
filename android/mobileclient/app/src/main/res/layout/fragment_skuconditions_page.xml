<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:padding="20dp"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.auditpro.mobile_client.pages.SKUConditionsPage">
	<LinearLayout
		android:id="@+id/skuConditionsLayout"
		android:layout_marginTop="16dp"
		android:layout_gravity="center_horizontal"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<LinearLayout
			android:id="@+id/specimen_group"
			android:orientation="horizontal"
			android:layout_marginTop="8dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<Switch
				android:id="@+id/noneSwitch"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<com.auditpro.mobile_client.controls.CustomTextView
				style="@style/customText"
				android:id="@+id/specimen_text"
				android:text="@string/button_filter_none"
				android:paddingStart="5dp"
				android:paddingEnd="0dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>