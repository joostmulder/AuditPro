<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">#0094FF</item>
		<item name="colorPrimaryDark">#0094FF</item>
		<item name="colorAccent">#0094FF</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">#0094FF</item>
	</style>

	<style name="customButton" parent="@android:style/Widget.Button">
		<item name="customfont">hero.otf</item>
		<item name="android:background">@drawable/button_custom</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:minHeight">30dp</item>
	</style>
	<style name="helpButton" parent="customButton">
		<item name="android:background">@drawable/button_help</item>
	</style>
	<style name="statusButton" parent="customButton">
		<item name="android:background">@drawable/button_status</item>
	</style>
	<style name="customEdit" parent="@android:style/Widget.EditText">
		<item name="customfont">hero.otf</item>
	</style>
	<style name="customText" parent="@android:style/TextAppearance.Widget.TextView">
		<item name="customfont">hero.otf</item>
	</style>
</resources>
